    <script>
        // تطبيق منصة توثيق الشهادات
        class CertificatePlatform {
            constructor() {
                this.currentPage = 'home';
                this.init();
            }

            init() {
                this.setupEventListeners();
                this.setupNavigation();
                this.loadDemoData();
            }

            setupEventListeners() {
                // نموذج التحقق السريع
                const verifyForm = document.getElementById('quickVerifyForm');
                if (verifyForm) {
                    verifyForm.addEventListener('submit', (e) => this.handleQuickVerify(e));
                }

                // نموذج تسجيل الدخول
                const loginForm = document.getElementById('loginForm');
                if (loginForm) {
                    loginForm.addEventListener('submit', (e) => this.handleLogin(e));
                }

                // نموذج التسجيل
                const registerForm = document.getElementById('registerForm');
                if (registerForm) {
                    registerForm.addEventListener('submit', (e) => this.handleRegister(e));
                }

                // قائمة الجوال
                const mobileMenuBtn = document.querySelector('.mobile-menu-btn');
                if (mobileMenuBtn) {
                    mobileMenuBtn.addEventListener('click', () => this.toggleMobileMenu());
                }

                // التنقل السلس
                document.querySelectorAll('a[href^="#"]').forEach(anchor => {
                    anchor.addEventListener('click', (e) => {
                        e.preventDefault();
                        const target = anchor.getAttribute('href').substring(1);
                        this.navigateTo(target);
                    });
                });

                // التحكم في زر رجوع المتصفح
                window.addEventListener('popstate', (e) => {
                    this.handleBrowserBack(e);
                });
            }

            setupNavigation() {
                // إعداد التنقل الأولي
                const hash = window.location.hash.substring(1);
                if (hash) {
                    this.navigateTo(hash);
                }
            }

            navigateTo(page) {
                // إخفاء جميع الصفحات
                document.querySelectorAll('[id$="-page"]').forEach(el => {
                    el.style.display = 'none';
                });

                // إظهار الصفحة المطلوبة
                switch(page) {
                    case 'home':
                        document.getElementById('home-page').style.display = 'block';
                        break;
                    case 'login':
                        document.getElementById('login-page').style.display = 'block';
                        break;
                    case 'register':
                        document.getElementById('register-page').style.display = 'block';
                        break;
                    case 'dashboard':
                        document.getElementById('dashboard-page').style.display = 'block';
                        this.loadDashboardData();
                        break;
                    default:
                        document.getElementById('home-page').style.display = 'block';
                        // إذا كان hash يشير إلى قسم في الصفحة الرئيسية
                        if (page && document.getElementById(page)) {
                            document.getElementById(page).scrollIntoView({ behavior: 'smooth' });
                        }
                }

                this.currentPage = page;
                window.history.pushState({ page }, '', `#${page}`);
            }

            handleBrowserBack(e) {
                const state = e.state;
                if (state && state.page) {
                    this.navigateTo(state.page);
                } else {
                    this.navigateTo('home');
                }
            }

            async handleQuickVerify(e) {
                e.preventDefault();
                
                const certificateNumber = document.getElementById('certificateNumber').value.trim();
                const resultDiv = document.getElementById('verifyResult');

                if (!certificateNumber) {
                    this.showNotification('يرجى إدخال رقم الشهادة', 'error');
                    return;
                }

                // عرض حالة التحميل
                resultDiv.innerHTML = `
                    <div class="loading-state">
                        <div class="spinner"></div>
                        <p>جاري التحقق من الشهادة على البلوكشين...</p>
                    </div>
                `;
                resultDiv.classList.add('show', 'loading');

                try {
                    // محاكاة الاستجابة من الخادم
                    const result = await this.mockVerifyCertificate(certificateNumber);
                    
                    if (result.success) {
                        this.displayVerificationResult(result.data);
                    } else {
                        this.showVerificationError(result.message);
                    }
                } catch (error) {
                    this.showVerificationError('فشل في التحقق. يرجى المحاولة مرة أخرى.');
                }
            }

            async mockVerifyCertificate(certificateNumber) {
                // محاكاة تأخير الشبكة
                await new Promise(resolve => setTimeout(resolve, 2000));
                
                // بيانات وهمية للعرض
                const mockData = {
                    'CERT-2024-001': {
                        success: true,
                        data: {
                            certificate_number: 'CERT-2024-001',
                            recipient_name: 'أحمد محمد',
                            certificate_type: 'شهادة إتمام دورة',
                            issue_date: '2024-03-15',
                            issuer_name: 'أكاديمية التطوير',
                            status: 'active',
                            blockchain_verified: true,
                            blockchain_timestamp: 1710451200,
                            blockchain_hash: '0x1a2b3c4d5e6f7890abcdef1234567890'
                        }
                    },
                    'CERT-2024-002': {
                        success: false,
                        message: 'الشهادة غير موجودة'
                    }
                };

                return mockData[certificateNumber] || {
                    success: false,
                    message: 'رقم الشهادة غير صحيح'
                };
            }

            displayVerificationResult(data) {
                const resultDiv = document.getElementById('verifyResult');
                const statusClass = data.blockchain_verified ? 'success' : 'warning';
                
                resultDiv.innerHTML = `
                    <div class="verification-result ${statusClass}">
                        <div class="result-header">
                            <h3>${data.blockchain_verified ? '✓ الشهادة موثقة' : '⚠ تحذير في التحقق'}</h3>
                            <span class="status-badge ${data.status}">${this.getStatusText(data.status)}</span>
                        </div>
                        <div class="result-details">
                            <div class="detail-row">
                                <span class="label">رقم الشهادة:</span>
                                <span class="value">${data.certificate_number}</span>
                            </div>
                            <div class="detail-row">
                                <span class="label">اسم المستلم:</span>
                                <span class="value">${data.recipient_name}</span>
                            </div>
                            <div class="detail-row">
                                <span class="label">الجهة المصدرة:</span>
                                <span class="value">${data.issuer_name}</span>
                            </div>
                            <div class="detail-row">
                                <span class="label">تاريخ الإصدار:</span>
                                <span class="value">${new Date(data.issue_date).toLocaleDateString('ar-SA')}</span>
                            </div>
                            <div class="detail-row">
                                <span class="label">التحقق على البلوكشين:</span>
                                <span class="value ${data.blockchain_verified ? 'verified' : 'not-verified'}">
                                    ${data.blockchain_verified ? '✓ تم التحقق' : '✗ لم يتم التحقق'}
                                </span>
                            </div>
                            ${data.blockchain_hash ? `
                            <div class="detail-row">
                                <span class="label">البصمة الرقمية:</span>
                                <span class="value hash">${data.blockchain_hash}</span>
                            </div>
                            ` : ''}
                        </div>
                    </div>
                `;
                resultDiv.classList.add('show');
                resultDiv.classList.remove('loading');
            }

            showVerificationError(message) {
                const resultDiv = document.getElementById('verifyResult');
                resultDiv.innerHTML = `
                    <div class="verification-result error">
                        <div class="result-header">
                            <h3>❌ فشل في التحقق</h3>
                        </div>
                        <div class="result-details">
                            <p>${message}</p>
                        </div>
                    </div>
                `;
                resultDiv.classList.add('show');
                resultDiv.classList.remove('loading');
            }

            async handleLogin(e) {
                e.preventDefault();
                
                const email = document.getElementById('loginEmail').value;
                const password = document.getElementById('loginPassword').value;

                if (!email || !password) {
                    this.showNotification('يرجى ملء جميع الحقول', 'error');
                    return;
                }

                this.showNotification('جاري تسجيل الدخول...', 'info');

                // محاكاة تسجيل الدخول
                setTimeout(() => {
                    localStorage.setItem('user_email', email);
                    localStorage.setItem('user_logged_in', 'true');
                    this.showNotification('تم تسجيل الدخول بنجاح!', 'success');
                    this.navigateTo('dashboard');
                }, 2000);
            }

            async handleRegister(e) {
                e.preventDefault();
                
                const accountType = document.getElementById('accountType').value;
                const orgName = document.getElementById('orgName').value;
                const email = document.getElementById('registerEmail').value;
                const password = document.getElementById('registerPassword').value;
                const confirmPassword = document.getElementById('confirmPassword').value;

                if (!accountType || !orgName || !email || !password || !confirmPassword) {
                    this.showNotification('يرجى ملء جميع الحقول', 'error');
                    return;
                }

                if (password !== confirmPassword) {
                    this.showNotification('كلمات المرور غير متطابقة', 'error');
                    return;
                }

                this.showNotification('جاري إنشاء الحساب...', 'info');

                // محاكاة التسجيل
                setTimeout(() => {
                    localStorage.setItem('user_email', email);
                    localStorage.setItem('user_org', orgName);
                    localStorage.setItem('user_type', accountType);
                    localStorage.setItem('user_logged_in', 'true');
                    this.showNotification('تم إنشاء الحساب بنجاح!', 'success');
                    this.navigateTo('dashboard');
                }, 2000);
            }

            async connectWallet() {
                this.showNotification('جاري الاتصال بالمحفظة...', 'info');
                
                if (typeof window.ethereum !== 'undefined') {
                    try {
                        const accounts = await window.ethereum.request({ 
                            method: 'eth_requestAccounts' 
                        });
                        
                        const account = accounts[0];
                        localStorage.setItem('wallet_address', account);
                        this.showNotification(`تم الاتصال: ${account.substring(0,6)}...${account.substring(38)}`, 'success');
                        
                    } catch (error) {
                        this.showNotification('فشل في الاتصال بالمحفظة', 'error');
                    }
                } else {
                    // محاكاة الاتصال للمعاينة
                    const mockAccount = '0x' + Math.random().toString(16).substring(2,42);
                    localStorage.setItem('wallet_address', mockAccount);
                    this.showNotification(`تم الاتصال بالمحفظة التجريبية`, 'success');
                }
            }

            loadDemoData() {
                // تحميل الإحصائيات الوهمية
                setTimeout(() => {
                    const elements = {
                        'total-certificates': '10,247',
                        'verified-count': '99.9%',
                        'issuer-count': '523'
                    };

                    for (const [id, value] of Object.entries(elements)) {
                        const element = document.getElementById(id);
                        if (element) {
                            this.animateValue(element, 0, parseInt(value.replace(',', '')), 2000);
                        }
                    }
                }, 1000);
            }

            loadDashboardData() {
                // تحميل بيانات لوحة التحكم
                const stats = {
                    'user-certificates': 15,
                    'pending-verifications': 3,
                    'success-rate': 98,
                    'blockchain-tx': 27
                };

                for (const [id, value] of Object.entries(stats)) {
                    const element = document.getElementById(id);
                    if (element) {
                        this.animateValue(element, 0, value, 1500);
                    }
                }

                // تحميل النشاطات الأخيرة
                const activities = [
                    { icon: '📄', text: 'تم إصدار شهادة جديدة CERT-2024-015', time: 'منذ 5 دقائق' },
                    { icon: '🔍', text: 'تم التحقق من شهادة CERT-2024-010', time: 'منذ ساعة' },
                    { icon: '✅', text: 'تمت الموافقة على طلب تحقق جديد', time: 'منذ 3 ساعات' },
                    { icon: '⛓️', text: 'تم تخزين شهادة على البلوكشين', time: 'منذ 6 ساعات' }
                ];

                const activityList = document.getElementById('activityList');
                if (activityList) {
                    activityList.innerHTML = activities.map(activity => `
                        <div class="activity-item">
                            <div class="activity-icon">${activity.icon}</div>
                            <div>
                                <div>${activity.text}</div>
                                <small style="color: var(--text-secondary);">${activity.time}</small>
                            </div>
                        </div>
                    `).join('');
                }
            }

            animateValue(element, start, end, duration) {
                let startTimestamp = null;
                const step = (timestamp) => {
                    if (!startTimestamp) startTimestamp = timestamp;
                    const progress = Math.min((timestamp - startTimestamp) / duration, 1);
                    const value = Math.floor(progress * (end - start) + start);
                    element.textContent = value.toLocaleString() + (element.id === 'verified-count' || element.id === 'success-rate' ? '%' : '');
                    if (progress < 1) {
                        window.requestAnimationFrame(step);
                    }
                };
                window.requestAnimationFrame(step);
            }

            showSection(section) {
                this.showNotification(`فتح قسم: ${section}`, 'info');
                // هنا يمكن إضافة منطق إظهار الأقسام المختلفة
            }

            toggleMobileMenu() {
                const navLinks = document.querySelector('.nav-links');
                navLinks.style.display = navLinks.style.display === 'flex' ? 'none' : 'flex';
            }

            getStatusText(status) {
                const statusMap = {
                    'active': 'نشطة',
                    'revoked': 'ملغاة',
                    'expired': 'منتهية'
                };
                return statusMap[status] || status;
            }

            showNotification(message, type = 'info') {
                const notification = document.createElement('div');
                notification.className = `notification ${type}`;
                notification.innerHTML = `
                    <span class="notification-message">${message}</span>
                    <button class="notification-close" onclick="this.parentElement.remove()">×</button>
                `;
                
                document.body.appendChild(notification);
                
                setTimeout(() => {
                    if (notification.parentElement) {
                        notification.style.animation = 'slideOut 0.3s ease';
                        setTimeout(() => notification.remove(), 300);
                    }
                }, 5000);
            }
        }

        // تهيئة التطبيق عند تحميل الصفحة
        document.addEventListener('DOMContentLoaded', () => {
            window.platform = new CertificatePlatform();
        });
    </script>
    <script>
        class APIService {
    constructor() {
        // عنوان الـ Backend - غير هذا حسب إعداداتك
        this.BASE_URL = 'http://localhost/certificate-platform/backend/api';
        this.token = localStorage.getItem('auth_token');
    }

    async request(endpoint, options = {}) {
        const headers = {
            'Content-Type': 'application/json',
            ...options.headers
        };

        if (this.token) {
            headers['Authorization'] = `Bearer ${this.token}`;
        }

        try {
            const response = await fetch(`${this.BASE_URL}${endpoint}`, {
                ...options,
                headers
            });

            const data = await response.json();
            
            if (!response.ok) {
                throw new Error(data.message || 'حدث خطأ في الخادم');
            }
            
            return data;
        } catch (error) {
            console.error('API Request Error:', error);
            throw error;
        }
    }

    // تسجيل الدخول
    async login(email, password) {
        return this.request('/auth/login.php', {
            method: 'POST',
            body: JSON.stringify({ email, password })
        });
    }

    // تسجيل مستخدم جديد
    async register(userData) {
        return this.request('/auth/register.php', {
            method: 'POST',
            body: JSON.stringify(userData)
        });
    }

    // التحقق من شهادة
    async verifyCertificate(certificateNumber) {
        return this.request(`/certificates/verify.php?certificate_number=${encodeURIComponent(certificateNumber)}`);
    }

    // إنشاء شهادة جديدة
    async createCertificate(certificateData) {
        return this.request('/certificates/create.php', {
            method: 'POST',
            body: JSON.stringify(certificateData)
        });
    }

    // تحديث الـ token
    setToken(token) {
        this.token = token;
        localStorage.setItem('auth_token', token);
    }

    // تسجيل الخروج
    logout() {
        this.token = null;
        localStorage.removeItem('auth_token');
        localStorage.removeItem('user_data');
    }
}
    </script>
</body>
</html>
